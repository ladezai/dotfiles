# template article
snippet ;article "Create an exercise sheet for solutions" b
\documentclass[11pt, a4paper]{article}

% most used packages
\usepackage{amsmath,amssymb,mathtools,amsthm,derivative}

% theorem declarations
\theoremstyle{plain}
\newtheorem{theorem}{Theorem}[section]
\newtheorem{lemma}{Lemma}
\newtheorem{proposition}{Proposition}
\newtheorem{exercise}{Exercise}

\theoremstyle{definition}
\newtheorem{definition}{Definition}

\theoremstyle{remark}
\newtheorem{remark}{Remark}

% Title, author and date.
\title{$1}
\author{$2}
\date{$3}

\begin{document}
    \maketitle
    $0
\end{document}
endsnippet 

# Environments snippets
snippet beg "Create new environment"
\begin{$1}
    $0
\end{$1}
endsnippet

snippet eqn "Create equation environment with label"
\begin{equation}\label{$0}
    $1
\end{equation}
endsnippet

snippet eq "Create equation environment"
\begin{equation*}
    $0
\end{equation*}
endsnippet

snippet ali "Create an aligned environment"
\begin{align*}
    $0
\end{align*}
endsnippet

snippet enum "Create an enumerate environment" 
\begin{enumerate}
    \item $0
\end{enumerate}
endsnippet

snippet thr "Create a theorem with label" b
\begin{theorem}\label{thr:$0}
    $1
\end{theorem}
endsnippet

snippet prop "Create a Proposition with label" b
\begin{proposition}\label{prop:$0}
    $1
\end{proposition}
endsnippet

snippet lem "Create a Lemma with label" b
\begin{lemma}\label{lemma:$0}
    $1
\end{lemma}
endsnippet

snippet cor "Create a Corollary with label" b
