endsnippet 

# Subscript, superscripts and fractions
snippet ;im "Insert inline math" iA
$$0$
endsnippet

snippet ... "dots" iA
\dots
endsnippet 

snippet __ "subscript" iA
_{$1}$0
endsnippet

snippet ^^ "superscript" iA
^{$1}$0
endsnippet

snippet // "fraction" iA
\frac{$1}{$2}$0
endsnippet

snippet {{ "open well-sized curly brackets {" iA
\left\\{$1\right\\}$0
endsnippet

snippet [[ "open well-sized square brackets" iA
\left[$1\right]$0
endsnippet

snippet (( "open well-sized brackets" iA
\left($1\right)$0
endsnippet

snippet <<< "open well-size angled brackets" iA
\left\langle$1\right\rangle$0
endsnippet

# hats
priority 10
snippet "bar" "bar" ri
\overline{$1}$0
endsnippet
 
priority 100
snippet "([a-zA-Z])bar" "bar" ri
\overline{`!p snip.rv=match.group(1)`}
endsnippet

priority 10
snippet "hat" "hat" ri
\widehat{$1}$0
endsnippet

priority 100
snippet "([a-zA-Z])hat" "hat" ri
\widehat{`!p snip.rv=match.group(1)`}
endsnippet

priority 10
snippet "tilde" "tilde" ri
\widetilde{$1}$0
endsnippet

priority 100
snippet "([a-zA-Z])tilde" "tilde" ri
\widetilde{`!p snip.rv=match.group(1)`}
endsnippet

# Series, limit and integrals
snippet "int" "integral" ri
\int_{$1}^{$2} $3 \, \textrm{d} $0
endsnippet

snippet "mint" "measure like integral" ri
\int_{$1} $2 \, \textrm{d} $0
endsnippet

snippet "lim" "limit" ri
\lim_{$1 \to $2} $0
endsnippet

snippet "sum" "sum" ri 
\sum_{$1=$2}^{$3} $0
endsnippet

snippet "rseries" "Taylor series" ri
\sum_{$1=0}^{+\infty} $0
endsnippet

snippet "cseries" "Laurant series" ri
\sum_{$1=-\infty}^{+\infty} $0
endsnippet

snippet "pdv" "partial derivative" ri
\pdv{$1}{$2} $0
endsnippet

snippet "odv" "ordinary derivative" ri
